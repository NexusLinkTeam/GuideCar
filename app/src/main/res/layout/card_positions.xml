<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="6dp"
            android:background="@drawable/shape_circle_green"
            android:src="@drawable/ic_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintRight_toLeftOf="@+id/imageView9"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/imageView12"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <ImageView
            android:padding="6dp"
            android:background="@drawable/shape_circle_yellow"
            android:src="@drawable/ic_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView12"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/imageView12"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView12"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:padding="6dp"
            android:background="@drawable/shape_circle_red"
            android:src="@drawable/ic_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imageView10"
            android:id="@+id/imageView11"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <ImageView
            android:padding="6dp"
            android:background="@drawable/shape_circle_blue"
            android:src="@drawable/ic_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/imageView9"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView9"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView9"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:padding="6dp"
            android:background="@drawable/shape_circle_red"
            android:src="@drawable/ic_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView9"
            app:layout_constraintRight_toLeftOf="@+id/imageView10"
            app:layout_constraintLeft_toRightOf="@+id/imageView12"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <ImageView
            android:padding="6dp"
            android:background="@drawable/shape_circle_yellow"
            android:src="@drawable/ic_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView10"
            app:layout_constraintRight_toLeftOf="@+id/imageView11"
            app:layout_constraintLeft_toRightOf="@+id/imageView9"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>