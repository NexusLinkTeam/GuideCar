<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="6dp"
            android:background="@drawable/shape_circle_green"
            android:src="@drawable/ic_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintRight_toLeftOf="@+id/imageView9"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/imageView12"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <ImageView
            android:padding="6dp"
            android:background="@drawable/shape_circle_yellow"
            android:src="@drawable/ic_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView12"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/imageView12"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:id="@+id/imageView6"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <ImageView
            android:padding="6dp"
            android:background="@drawable/shape_circle_red"
            android:src="@drawable/ic_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imageView10"
            android:id="@+id/imageView11"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <ImageView
            android:padding="6dp"
            android:background="@drawable/shape_circle_blue"
            android:src="@drawable/ic_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/imageView9"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView9"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:id="@+id/imageView7"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

        <ImageView
            android:padding="6dp"
            android:background="@drawable/shape_circle_red"
            android:src="@drawable/ic_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView9"
            app:layout_constraintRight_toLeftOf="@+id/imageView10"
            app:layout_constraintLeft_toRightOf="@+id/imageView12"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <ImageView
            android:padding="6dp"
            android:background="@drawable/shape_circle_yellow"
            android:src="@drawable/ic_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView10"
            app:layout_constraintRight_toLeftOf="@+id/imageView11"
            app:layout_constraintLeft_toRightOf="@+id/imageView9"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="登机口A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/imageView7"
            app:layout_constraintRight_toRightOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="超市B"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/imageView9"
            app:layout_constraintRight_toRightOf="@+id/imageView9"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="登机口B"
            app:layout_constraintLeft_toLeftOf="@+id/imageView11"
            app:layout_constraintTop_toBottomOf="@+id/imageView11"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/imageView11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="厕所A"
            app:layout_constraintLeft_toLeftOf="@+id/imageView10"
            app:layout_constraintRight_toRightOf="@+id/imageView10"
            app:layout_constraintTop_toBottomOf="@+id/imageView10" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="厕所B"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/imageView6"
            app:layout_constraintRight_toRightOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="A站口"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/imageView12"
            app:layout_constraintRight_toRightOf="@+id/imageView12"
            app:layout_constraintTop_toBottomOf="@+id/imageView12" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>