<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="XX航空公司"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:text="乘客信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />
        <TextView
            android:text="连接状态"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textView8"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />
        <TextView
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="Rye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView8" />
        <TextView
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="已连接"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView7" />

        <TextView
            android:text="起飞时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView8" />

        <TextView
            android:text="站口"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView7" />
        
        <TextView
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="7:45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView10" />
        
        <TextView
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="A25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView12" />

        <TextView
            android:text="起飞地点"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView10" />
        <TextView
            android:text="降落地点"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView12" />

        <TextView
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="江北机场"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView14" />

        <TextView
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="双流机场"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView18" />

        <TextView
            android:text="座位号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView14" />
        <TextView
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="7排3座"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView17" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>