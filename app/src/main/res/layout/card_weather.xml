<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="重庆"
            android:textSize="28sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp" />

        <TextView
            android:textSize="28sp"
            android:text="南岸"
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/city"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp" />
        <TextView
            android:text="Powered by heWeather"
            android:id="@+id/info_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/current_temp" />
        <ImageView
            android:id="@+id/weather_today"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/city"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/position"
            app:layout_constraintTop_toBottomOf="@+id/city"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/current_temp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
        <TextView
            android:textSize="32dp"
            android:id="@+id/current_temp"
            android:text="24"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/info_power"
            app:layout_constraintTop_toBottomOf="@+id/weather_today"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/weather_today"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/weather_today" />

        <TextView
            android:text="周二"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/day1"
            app:layout_constraintRight_toLeftOf="@+id/day2"
            app:layout_constraintLeft_toRightOf="@+id/position"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/position"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/weather_day1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="@+id/day1"
            app:layout_constraintRight_toRightOf="@+id/day1"
            app:layout_constraintTop_toBottomOf="@+id/day1" />


        <TextView
            android:id="@+id/day2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周二"
            app:layout_constraintBottom_toBottomOf="@+id/day1"
            app:layout_constraintLeft_toRightOf="@+id/day1"
            app:layout_constraintRight_toLeftOf="@+id/day3"
            app:layout_constraintTop_toTopOf="@+id/day1" />

        <ImageView
            android:id="@+id/weather_day2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="@+id/day2"
            app:layout_constraintRight_toRightOf="@+id/day2"
            app:layout_constraintTop_toBottomOf="@+id/day2" />

        <TextView
            android:text="周二"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/day3"
            app:layout_constraintRight_toLeftOf="@+id/day4"
            app:layout_constraintLeft_toRightOf="@+id/day2"
            app:layout_constraintTop_toTopOf="@+id/day2"
            app:layout_constraintBottom_toBottomOf="@+id/day2" />

        <ImageView
            android:id="@+id/weather_day3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="@+id/day3"
            app:layout_constraintRight_toRightOf="@+id/day3"
            app:layout_constraintTop_toBottomOf="@+id/day3" />

        <TextView
            android:text="周二"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/day4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/day3"
            app:layout_constraintTop_toTopOf="@+id/day3"
            app:layout_constraintBottom_toBottomOf="@+id/day3" />

        <ImageView
            android:id="@+id/weather_day4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="@+id/day4"
            app:layout_constraintRight_toRightOf="@+id/day4"
            app:layout_constraintTop_toBottomOf="@+id/day4" />

        <TextView
            android:id="@+id/temp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="16dp"
            android:text="12"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintLeft_toLeftOf="@+id/weather_day1"
            app:layout_constraintRight_toRightOf="@+id/weather_day1"
            app:layout_constraintTop_toBottomOf="@+id/weather_day1" />

        <TextView
            android:id="@+id/temp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="16dp"
            android:text="12"
            app:layout_constraintLeft_toLeftOf="@+id/weather_day2"
            app:layout_constraintRight_toRightOf="@+id/weather_day2"
            app:layout_constraintTop_toBottomOf="@+id/weather_day2" />

        <TextView
            android:id="@+id/temp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="16dp"
            android:text="12"
            app:layout_constraintLeft_toLeftOf="@+id/weather_day3"
            app:layout_constraintRight_toRightOf="@+id/weather_day3"
            app:layout_constraintTop_toBottomOf="@+id/weather_day3" />

        <TextView
            android:id="@+id/temp4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="16dp"
            android:text="12"
            app:layout_constraintLeft_toLeftOf="@+id/weather_day4"
            app:layout_constraintRight_toRightOf="@+id/weather_day4"
            app:layout_constraintTop_toBottomOf="@+id/weather_day4" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>