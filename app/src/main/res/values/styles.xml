<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--默认accentColor为蓝色-->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!--白天模式-->
    <style name="DayTheme" parent="BaseTheme">
        <!--白色colorPrimary-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--windowBackground-->
        <item name="android:windowBackground">@color/colorWhiteDark</item>
        <!--主text-->
        <item name="android:textColorPrimary">@color/colorBlackLight</item>
        <!--次text-->
        <item name="android:textColorSecondary">@color/colorGray</item>
        <!--card颜色-->
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <!--主字体-->
        <item name="myTextColorPrimary">@color/colorBlackLight</item>
        <!--次字体-->
        <item name="myTextColorSecondary">@color/colorGray</item>

    </style>
    <!--夜间模式-->
    <style name="NightTheme" parent="BaseTheme">
        <!--暗色colorPrimary-->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <!--windowBackground-->
        <item name="android:windowBackground">@color/colorBlackLighter</item>
        <!--主text-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--次text-->
        <item name="android:textColorSecondary">@color/colorGrayLight</item>
        <!--card颜色-->
        <item name="cardBackgroundColor">@color/colorGrayDark</item>
        <!--主字体-->
        <item name="myTextColorPrimary">@android:color/white</item>
        <!--次字体-->
        <item name="myTextColorSecondary">@color/colorGrayLight</item>

    </style>

    <style name="FullscreenTheme" parent="BaseTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
</resources>
